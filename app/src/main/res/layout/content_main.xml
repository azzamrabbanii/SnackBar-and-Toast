<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/button_success"
        android:layout_width="160dp"
        android:layout_height="64dp"
        android:background="@color/color_success"
        android:text="Success"
        android:textColor="@color/accent_color_success"/>

    <Button
        android:id="@+id/button_info"
        android:layout_width="160dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:background="@color/color_info"
        android:backgroundTint="@color/color_info"
        android:text="Info"
        android:textColor="@color/accent_color_info"/>

    <Button
        android:id="@+id/button_warning"
        android:layout_width="160dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:background="@color/color_warning"
        android:text="Warning"
        android:textColor="@color/accent_color_warning"/>

    <Button
        android:id="@+id/button_error"
        android:layout_width="160dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:background="@color/color_error"
        android:text="Error"
        android:textColor="@color/accent_color_error"/>

    <Button
        android:id="@+id/button_normal"
        android:layout_width="160dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:background="@color/black"
        android:text="Normal"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/button_custom"
        android:layout_width="160dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:background="@color/design_default_color_background"
        android:backgroundTint="#009688"
        android:text="Custom"
        android:textColor="@android:color/white"/>

</LinearLayout>